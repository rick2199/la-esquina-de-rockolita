        </div>

        <!-- Grid de subcategor√≠as -->
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
          {
            Object.entries(category.subcategories).map(
              ([subKey, subcategory]) => (
                <button
