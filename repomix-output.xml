/* Tipografías de la marca */
.brand-title {
  font-family: 'Fredoka', sans-serif;
  font-weight: 700;
}

.brand-subtitle {
  font-family: 'Fredoka', sans-serif;
  font-weight: 500;
}

.brand-text {
  font-family: 'DM Sans', sans-serif;
}

/* Efectos de hover con los colores de la marca */
.rockolita-hover {
  transition: all 0.3s ease;
}

.rockolita-hover:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(214, 184, 90, 0.3);
}

/* Gradientes de marca */
.rockolita-gradient {
  background: linear-gradient(135deg, hsl(var(--rockolita-primary)) 0%, hsl(var(--rockolita-secondary)) 100%);
}

.rockolita-gradient-text {
  background: linear-gradient(135deg, hsl(var(--rockolita-primary)) 0%, hsl(var(--rockolita-secondary)) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* Línea dorada decorativa */
.golden-line {
  position: relative;
  text-align: center;
  margin: 2rem 0;
}

.golden-line::before,
.golden-line::after {
  content: '';
  position: absolute;
  top: 50%;
  width: 30%;
  height: 2px;
  background: linear-gradient(90deg, transparent, hsl(var(--rockolita-primary)), transparent);
}

.golden-line::before {
  left: 0;
}

.golden-line::after {
  right: 0;
}

/* Componentes de productos mejorados */
.product-card {
  display: flex;
  flex-direction: column;
  height: 100%;
  background: white;
  border: 2px solid hsl(var(--rockolita-cream));
  transition: all 0.3s ease;
}

.product-card:hover {
  border-color: hsl(var(--rockolita-primary));
  box-shadow: 0 8px 25px rgba(214, 184, 90, 0.2);
  transform: translateY(-2px);
}

.product-image-container {
  flex-shrink: 0;
  background: linear-gradient(135deg, #fafafa 0%, hsl(var(--rockolita-cream)) 100%);
}

.product-content {
  display: flex;
  flex-direction: column;
  flex-grow: 1;
}

.product-title {
  flex-shrink: 0;
  height: 2.5rem;
  display: flex;
  align-items: flex-start;
  color: hsl(var(--rockolita-dark));
}

.product-presentations {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.presentation-item {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  background: hsl(var(--rockolita-cream));
  border: 1px solid rgba(214, 184, 90, 0.3);
  transition: all 0.2s ease;
}

.presentation-item:hover {
  background: rgba(214, 184, 90, 0.1);
  border-color: hsl(var(--rockolita-primary));
}

.presentation-price {
  flex-shrink: 0;
  color: hsl(var(--rockolita-secondary));
  font-weight: 700;
}

.line-clamp-2 {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  word-break: break-word;
}

/* Botones con estilo de marca */
.rockolita-btn {
  background: hsl(var(--rockolita-primary));
  color: hsl(var(--rockolita-dark));
  font-weight: 600;
  border: 2px solid hsl(var(--rockolita-primary));
  transition: all 0.3s ease;
}

.rockolita-btn:hover {
  background: transparent;
  color: hsl(var(--rockolita-primary));
  transform: translateY(-2px);
  box-shadow: 0 4px 15px rgba(214, 184, 90, 0.4);
}

.rockolita-btn-secondary {
  background: hsl(var(--rockolita-secondary));
  color: white;
  font-weight: 600;
  border: 2px solid hsl(var(--rockolita-secondary));
  transition: all 0.3s ease;
}

.rockolita-btn-secondary:hover {
  background: transparent;
  color: hsl(var(--rockolita-secondary));
  transform: translateY(-2px);
  box-shadow: 0 4px 15px rgba(84, 58, 41, 0.4);
}

/* Headers con estilo de marca */
.rockolita-header {
  background: linear-gradient(135deg, white 0%, hsl(var(--rockolita-cream)) 100%);
  border-bottom: 3px solid hsl(var(--rockolita-primary));
}

/* Cards con efecto de marca */
.rockolita-card {
  background: white;
  border: 2px solid hsl(var(--rockolita-cream));
  border-radius: 12px;
  transition: all 0.3s ease;
}

.rockolita-card:hover {
  border-color: hsl(var(--rockolita-primary));
  box-shadow: 0 12px 30px rgba(214, 184, 90, 0.2);
  transform: translateY(-4px);
}

/* Footer con estilo de marca */
.rockolita-footer {
  background: hsl(var(--rockolita-secondary));
  color: hsl(var(--rockolita-cream));
}

/* Animaciones especiales */
@keyframes wiggle {
  0%, 7% { transform: rotateZ(0); }
  15% { transform: rotateZ(-15deg); }
  20% { transform: rotateZ(10deg); }
  25% { transform: rotateZ(-10deg); }
  30% { transform: rotateZ(6deg); }
  35% { transform: rotateZ(-4deg); }
  40%, 100% { transform: rotateZ(0); }
}

.rockolita-wiggle:hover {
  animation: wiggle 0.8s ease-in-out;
}

/* Estilos para las advertencias */
.warning-box {
  background: linear-gradient(135deg, rgba(193, 75, 42, 0.1) 0%, rgba(193, 75, 42, 0.05) 100%);
  border: 2px solid hsl(var(--rockolita-red));
  border-radius: 12px;
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .brand-title {
    font-size: 1.8rem;
  }
}

html {
  scroll-behavior: smooth;
}
