{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    // Configuraciones para ser menos estricto con JavaScript
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowJs": true,
    "checkJs": false
  },
  // Excluir archivos específicos de verificación TypeScript
  "exclude": [
    "node_modules",
    "dist",
    "**/*.js"
  ]
}